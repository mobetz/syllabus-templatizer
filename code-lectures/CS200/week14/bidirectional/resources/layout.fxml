<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="505.0" prefWidth="711.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SceneController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#load_groceries" text="Load..." />
                  <MenuItem mnemonicParsing="false" text="Reset" />
                  <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <AnchorPane prefHeight="504.0" prefWidth="711.0">
         <children>
            <TableView fx:id="groceries_table" layoutX="36.0" layoutY="43.0" prefHeight="277.0" prefWidth="640.0">
               <columns>
                  <TableColumn fx:id="name_col" prefWidth="304.0" text="Name" />
                  <TableColumn fx:id="id_col" prefWidth="101.0" text="Barcode" />
                  <TableColumn fx:id="price_col" minWidth="0.0" prefWidth="157.0" text="Price" />
               </columns>
            </TableView>
            <Button fx:id="bread_button" layoutX="517.0" layoutY="341.0" mnemonicParsing="false" onAction="#increment_cost_of_bread" text="Make Bread Expensive" />
            <TextField fx:id="new_name" layoutX="127.0" layoutY="367.0" promptText="Grocery Name..." />
            <TextField fx:id="new_barcode" layoutX="313.0" layoutY="367.0" promptText="Grocery Barcode..." />
            <Spinner fx:id="new_price" layoutX="175.0" layoutY="409.0" prefHeight="26.0" prefWidth="114.0" />
            <Button fx:id="add_grocery_button" layoutX="356.0" layoutY="409.0" mnemonicParsing="false" onAction="#add_grocery" prefHeight="26.0" prefWidth="114.0" text="Add Grocery" />
            <Text layoutX="127.0" layoutY="427.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Price:" />
         </children>
      </AnchorPane>
   </children>
</VBox>
